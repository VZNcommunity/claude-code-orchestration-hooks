{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Git",
      "Edit",
      "Write"
    ],
    "deny": [],
    "ask": []
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matcher": "Grep|Glob|Read|Bash",
        "hooks": [
          {
            "type": "command",
            "comment": "Large output detection and context debt tracking",
            "command": "/home/vzith/.local/bin/output-monitor.sh",
            "timeout": 5,
            "suppressOutput": false
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "comment": "Auto-trigger code review after delegation (2025-12-15)",
            "command": "/home/vzith/.local/bin/auto-review-trigger.sh",
            "timeout": 5,
            "suppressOutput": false
          }
        ]
      }
    ]
  }
}
